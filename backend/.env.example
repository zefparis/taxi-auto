# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taxi_express?schema=public"

# JWT Auth
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Server
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-west-3
S3_BUCKET_NAME=taxi-express
S3_BASE_PATH=base/

# File Upload
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI for AI Support
OPENAI_API_KEY=your_openai_api_key_here

# Mobile Money Integration (UniPesa)
UNIPESA_API_KEY=your_unipesa_api_key_here
UNIPESA_SECRET=your_unipesa_secret_here
UNIPESA_SANDBOX=true

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Logging
LOG_LEVEL=debug

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
